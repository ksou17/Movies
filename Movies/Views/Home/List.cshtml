@{
    ViewData["Title"] = "Movie List";
}
@model List<MovieResponse>

<h2>Joel's Movies</h2>

<div>
    <table class="table  table-striped table-hover table-bordered">
        <thead class="font-weight-bold">
            <tr>
                <td>Category</td>
                <td>Movie Title</td>
                <td>Year</td>
                <td>Director</td>
                <td>Rating</td>
                <td>Edited</td>
                <td>Lent To</td>
                <td>Notes</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
            <tr>
                <td>@x.Category.CategoryName</td>
                <td>@x.MovieTitle</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                <td>@x.Edited</td>
                <td>@x.LentTo</td>
                <td>@x.Notes</td>

                <td><a asp-controller="Home" asp-action="Edit" asp-route-movieid="@x.MovieID">Edit</a></td>
                <td><a asp-controller="Home" asp-action="Delete" asp-route-movieid="@x.MovieID">Delete</a></td>
            </tr>

            }
        </tbody>
    </table>
</div>
